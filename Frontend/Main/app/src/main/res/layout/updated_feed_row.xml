<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">


    <android.support.v7.widget.CardView
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        cardview:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/feedReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/feedScore"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="130dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="219dp"
                android:layout_marginBottom="37dp"
                android:textColor="#096887"
                android:textSize="13dp"></TextView>

            <TextView
                android:id="@+id/feedName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/feedTitle"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="129dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="220dp"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/feedScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/feedName"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="129dp"
                android:layout_marginLeft="129dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="0dp"
                android:textColor="#000000"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/feedTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="130dp"
                android:layout_marginTop="2dp"
                android:textColor="#000000"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/replyButton"
                android:layout_width="16dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="206dp"
                android:layout_marginTop="114dp"
                android:layout_marginEnd="128dp"
                android:layout_marginBottom="6dp"
                android:src="@drawable/reply" />

            <ImageView
                android:id="@+id/ActivityDelete"
                android:layout_width="16dp"
                android:layout_height="21dp"
                android:layout_alignTop="@+id/feedTitle"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="310dp"
                android:layout_marginTop="111dp"
                android:layout_marginEnd="23dp"
                android:layout_marginBottom="6dp"
                android:src="@drawable/delete2" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/replyLayout"
        android:layout_width="90dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="0dp"
        cardview:cardElevation="10dp"
        android:layout_marginLeft="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/feedPoster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="#2d2d2d"
                android:scaleType="centerCrop" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>





</RelativeLayout>